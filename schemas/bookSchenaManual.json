{
    "type": "object",
    "properties": {
      "isbn": {
        "type": "string",
        "pattern": "^[0-9]{10,13}$"
      },
      "amazon_url": {
        "type": "string",
        "format": "uri"
      },
      "author": {
        "type": "string"
      },
      "language": {
        "type": "string"
      },
      "pages": {
        "type": "integer",
        "minimum": 0
      },
      "publisher": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "year": {
        "type": "integer",
        "minimum": 0
      }
    },
    "required": ["isbn", "amazon_url", "author", "language", "pages", "publisher", "title", "year"]
  }
  